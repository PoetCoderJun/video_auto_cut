# ---- Core ----
WORK_DIR=/opt/video_auto_cut/workdir
WEB_DB_LOCAL_ONLY=0
TURSO_DATABASE_URL=libsql://<your-db>-<org>.turso.io
TURSO_AUTH_TOKEN=<your-token>
TURSO_LOCAL_REPLICA_PATH=/opt/video_auto_cut/workdir/web_api_turso_replica.db

# ---- Auth ----
WEB_AUTH_ENABLED=1
BETTER_AUTH_SECRET=<strong-random-secret-at-least-32-chars>
NEXT_PUBLIC_SITE_URL=https://your-domain.example
BETTER_AUTH_URL=https://your-domain.example
WEB_AUTH_BASE_URL=https://your-domain.example
WEB_AUTH_ISSUER=https://your-domain.example
WEB_AUTH_AUDIENCE=https://your-domain.example
WEB_AUTH_JWKS_URL=https://your-domain.example/api/auth/jwks

# ---- API/CORS ----
API_HOST=127.0.0.1
API_PORT=8000
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=3000
NEXT_PUBLIC_API_BASE=https://your-domain.example/api/v1
WEB_CORS_ALLOWED_ORIGINS=https://your-domain.example
WEB_CORS_ALLOW_CREDENTIALS=1
WEB_CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
WEB_CORS_ALLOWED_HEADERS=*
WEB_CORS_EXPOSE_HEADERS=

# ---- ASR (DashScope + OSS) ----
ASR_BACKEND=dashscope_filetrans
ASR_DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com
ASR_DASHSCOPE_MODEL=qwen3-asr-flash-filetrans
ASR_DASHSCOPE_API_KEY=<dashscope-key>
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET=<your-bucket>
OSS_ACCESS_KEY_ID=<your-ak>
OSS_ACCESS_KEY_SECRET=<your-sk>
OSS_AUDIO_PREFIX=video-auto-cut/asr
OSS_SIGNED_URL_TTL_SECONDS=86400
